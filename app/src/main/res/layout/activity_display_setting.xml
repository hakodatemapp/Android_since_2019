<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ac.fun.hakodatemapplus.DisplaySettingActivity">


    <ScrollView
        android:id="@+id/settingScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:stretchColumns="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"

                android:text="チェックが入っているカテゴリがマップに表示されます。"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000">

                <ImageView
                    android:id="@+id/eat_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/taberu" />

                <TextView
                    android:id="@+id/eat_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="食べる"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/eat_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000">

                <ImageView
                    android:id="@+id/look_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/miru" />

                <TextView
                    android:id="@+id/look_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="見る"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/look_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000">

                <ImageView
                    android:id="@+id/play_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/asobu" />

                <TextView
                    android:id="@+id/play_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="遊ぶ"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/play_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000">

                <ImageView
                    android:id="@+id/buy_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/kaimono" />

                <TextView
                    android:id="@+id/buy_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="買う"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/buy_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000">

                <ImageView
                    android:id="@+id/spa_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/onsen" />

                <TextView
                    android:id="@+id/spa_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="温泉"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/spa_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000">

                <ImageView
                    android:id="@+id/event_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:src="@drawable/event" />

                <TextView
                    android:id="@+id/event_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="観光イベント"
                    android:textSize="15dp" />


                <CheckBox
                    android:id="@+id/event_checkBox"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:checked="true" />

            </TableRow>


