<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ac.fun.hakodatemapplus.DisplaySettingActivity">



    <ScrollView
        android:id="@+id/settingScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="false"
            android:stretchColumns="true">

            <TextView
                android:text="チェックが入っているカテゴリがマップに表示されます。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="13dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:background="#000"
                android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/eat_icon"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"
                   android:background="#fff"
                   android:src="@drawable/miru"/>

                <TextView
                    android:id="@+id/eat_text"
                    style="@style/CodeFont"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="食べる" />

                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/eat_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:background="#000"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/look_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:src="@drawable/miru"/>

                <TextView
                    android:id="@+id/look_text"
                    style="@style/CodeFont"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="見る" />

                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/look_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:background="#000"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/play_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:src="@drawable/miru"/>

                <TextView
                    android:id="@+id/play_text"
                    style="@style/CodeFont"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="遊ぶ" />

                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/play_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff"/>


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:background="#000"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/buy_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:src="@drawable/miru"/>

                <TextView
                    android:id="@+id/buy_text"
                    style="@style/CodeFont"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="買う" />

                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/buy_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff"/>


            </TableRow>



            <TableRow
                android:layout_width="wrap_content"
                android:background="#000"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/spa_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:src="@drawable/miru"/>
                <TextView
                    android:id="@+id/spa_text"
                    style="@style/CodeFont"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="温泉" />
                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/spa_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/event_icon"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:src="@drawable/miru"/>

                <TextView
                    android:id="@+id/event_text"
                    style="@style/CodeFont"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:text="観光イベント" />



                <CheckBox
                    android:layout_height="match_parent"
                    android:id="@+id/event_checkBox"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="#fff"/>

            </TableRow>


