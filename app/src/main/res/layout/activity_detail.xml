<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="1">

        <TableRow>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:adjustViewBounds="true"
                android:scaleType="fitStart" />

        </TableRow>

        <TableRow android:background="#000000">

            <TextView
                android:id="@+id/description_text"
                style="@style/CodeFont"
                android:layout_marginBottom="1dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="#fff"
                android:text="読み込み中..." />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:background="#000000">

            <TextView
                android:id="@+id/course_content"
                style="@style/CodeFont"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="コース内容" />

            <TextView
                android:id="@+id/contents_text"
                style="@style/CodeFont"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="#fff"
                android:text="読み込み中..." />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_main"
                android:layout_above="@+id/button_info"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="コースを選ぶ" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:background="#000000">

            <TextView
                android:id="@+id/course_time"
                style="@style/CodeFont"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="時間" />

            <TextView
                android:id="@+id/time_text"
                style="@style/CodeFont"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:text="--分" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:background="#000000">

            <TextView
                android:id="@+id/course_distance"
                style="@style/CodeFont"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="移動距離" />

            <TextView
                android:id="@+id/distance_text"
                style="@style/CodeFont"
                android:layout_marginBottom="1dp"
                android:background="#fff"
                android:text="--.-km" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:background="#000000">

            <TextView
                android:id="@+id/course_calorie"
                style="@style/CodeFont"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="消費カロリー" />

            <TextView
                android:id="@+id/calorie_text"
                style="@style/CodeFont"
                android:layout_marginBottom="1dp"
                android:background="#fff"
                android:text="180kcal" />
        </TableRow>

    </TableLayout>
</ScrollView>